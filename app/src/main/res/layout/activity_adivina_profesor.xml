<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="true"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context=".adivinaProfesor">

    <TableRow
        android:id="@+id/images_1_and_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:visibility="visible">

        <ImageView
            android:id="@+id/imagen_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:contentDescription="@string/content_description_image_1"
            android:visibility="visible"
            app:srcCompat="@drawable/bicicleta" />

        <ImageView
            android:id="@+id/imagen_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:contentDescription="@string/content_description_image_2"
            android:visibility="visible"
            app:srcCompat="@drawable/electronica" />
    </TableRow>

    <TableRow
        android:id="@+id/images_3_and_4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:visibility="visible">

        <ImageView
            android:id="@+id/imagen_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:contentDescription="@string/content_description_image_3"
            android:visibility="visible"
            app:srcCompat="@drawable/perezoso" />

        <ImageView
            android:id="@+id/imagen_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:contentDescription="@string/content_description_image_4"
            android:visibility="visible"
            app:srcCompat="@drawable/cocacola" />
    </TableRow>

    <TableRow
        android:id="@+id/answer"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible">

        <EditText
            android:id="@+id/respuesta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/adivinas_quien_es"
            android:textAlignment="center"
            android:textSize="30sp" />

    </TableRow>

    <TableRow
        android:id="@+id/button_answer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible">

        <Button
            android:id="@+id/boton_respuesta"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="@string/button_comprobar"
            android:visibility="visible" />

    </TableRow>

</LinearLayout>